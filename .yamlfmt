continue_on_error: false
doublestar: false
exclude:
  - .goreleaser.yaml
extensions:
  - yaml
  - yml
gitignore_excludes: false
gitignore_path: .gitignore
include: []
line_ending: lf
match_type: standard
output_format: default
regex_exclude: []
formatter:
  array_indent: 0
  disable_alias_key_correction: false
  disallow_anchors: true # If true, reject any YAML anchors or aliases found in the document
  drop_merge_tag: false
  eof_newline: true # Add a newline at the end of the file
  force_array_style: ""
  force_quote_style: ""
  include_document_start: false # Whether to include the document start marker (`---`)
  indent: 2 # The number of spaces to use for indentation
  indent_root_array: false # Indent an array that is at the lowest indentation level of the document
  indentless_arrays: false # Do not indent arrays that are at the lowest indentation level of the document
  line_ending: lf # The line ending to use
  max_line_length: 0 # The maximum line length to use (0 for unlimited)
  pad_line_comments: 1 # The number of padding spaces to insert before line comments
  retain_line_breaks: true # Retain line breaks in the input
  retain_line_breaks_single: true # Only keep a single line in groups of many blank lines
  scan_folded_as_literal: false # Scan folded scalars as literal scalars
  strip_directives: false # Strip directives from the input
  trim_trailing_whitespace: false # Trim trailing whitespace from the input
  type: basic
